// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Waitlist model for storing user signups
model Waitlist {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  phone     String
  userType  UserType
  brandName String?
  instagram String?
  message   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("waitlist")
}

enum UserType {
  customer
  creator
  brand
  investor
}

// Contact form submissions
model ContactMessage {
  id        String         @id @default(cuid())
  name      String
  email     String
  subject   ContactSubject
  message   String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@map("contact_messages")
}

enum ContactSubject {
  general
  creator
  partnership
  press
  support
  feedback
}
